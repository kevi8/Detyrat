@model List<Cart>
@{
    int total = 0;
    @foreach(var item in Model){
        total+= item.Product.Price * item.Quantity;
    }
}
<h1 class="text-center text-white">Check out your products</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Product</th>
      <th scope="col"></th>
      <th scope="col">Quantity</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model){
    <tr>
      <td>@item.Product.Name</td>
      <td><img src="~/uploads/@item.Product.ImageFileName" alt="item image" class="s-logo"></td>
      <td>@item.Quantity</td>
      <td><a asp-action="RemoveFromCart" asp-route-id="@item.CartId" class="btn btn-outline-danger">Remove</a></td>
    </tr>
    }
  </tbody>
</table>
<h1 class="text-white">Your total is : @total</h1>
<a asp-action="BuyFromCart" class="mt-4 btn btn-outline-success w-100 p-3">Complete Purchase</a>
