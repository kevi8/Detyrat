@model Plan
<h1>Plan a Weeding</h1>
<div class="row">
    <div class="col-6">
        <form asp-action="CreatePlan" method="post">
            <div class="form-row">
                <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example1cg" asp-for="WeederOne"></label>
                    <input id="form3Example1cg" class="form-control form-control-lg" asp-for="WeederOne"
                        placeholder="Weeder One" />
                    <span asp-validation-for="WeederOne"></span>
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example1cg" asp-for="WeederTwo"></label>
                    <input id="form3Example1cg" class="form-control form-control-lg" asp-for="WeederTwo"
                        placeholder="Wedder Two" />
                    <span asp-validation-for="WeederTwo"></span>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="inputAddress" asp-for="Address">Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St"
                        asp-for="Address">
                    <span asp-validation-for="Address"></span>
                </div>
                <div class="form-group"> <!-- Date input -->
                    <label class="control-label" for="date" asp-for="End">Date</label>
                    <input class="form-control" id="date" name="date" placeholder="MM/DD/YYYY" type="text" asp-for="End"/>
                    <span asp-validation-for="End"></span>
                </div>
            </div>
            <button type="submit" value="Create Plan" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>