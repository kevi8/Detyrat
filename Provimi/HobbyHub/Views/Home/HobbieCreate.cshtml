@model Hobbie

<div class="col-16">
    <div class="text-center">
        <h3>Add a Hobby</h3>
    </div>
    <form method="post" asp-action="CreateHobbie">
        <div class="col-8">
            <div class="form-group">
                <label class="d-block" asp-for="Name">Name:</label>
                <input class="d-block" asp-for="Name"/>
                <span class="d-block" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label class="d-block" asp-for="Content">Content:</label>
                <input class="d-block" asp-for="Content"/>
                <span class="d-block" asp-validation-for="Content"></span>
            </div>
        </div>
        <div>
            <button class="float-right float-bottom">Create</button>
        </div>
    </form>
</div>