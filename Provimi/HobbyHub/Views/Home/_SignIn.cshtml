@model SignIn




<div class="card" style="border-radius: 15px;">
    <div class="card-body p-5">
        <h2 class="text-uppercase text-center mb-5">Log In</h2>

        <form asp-action="Login" method="post">

            <div class="form-outline mb-4">
                <input type="text" id="form3Example3cg" class="form-control form-control-lg" asp-for="Username" />
                <label class="form-label" for="form3Example3cg" asp-for="Username">Your Email</label>
                <span asp-validation-for="Username"></span>
            </div>

            <div class="form-outline mb-4">
                <input type="password" id="form3Example4cg" class="form-control form-control-lg" asp-for="SPassword" />
                <label class="form-label" for="form3Example4cg" asp-for="SPassword">Password</label>
                <span asp-validation-for="SPassword"></span>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" value="Sing In"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Log In</button>
            </div>



        </form>

    </div>
</div>
